<div class="container">
  <div class="row">

    <div class="col-lg-4">
     <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-lg-8">
      <h1>Book Detail</h1>
      <table class="table table-striped">
        <thead>
          <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="5"></th>
          </tr>
        </thead>

        <tbody>
          <tr>

          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に消しますか?"}%></td>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

