<h2>User Info</h2>
       <%= user.name %>
       <%= user.introduction %>
        <p><%= link_to (edit_user_path(user)) , class: "btn btn-block" do %></p>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>

      <h2>New Book</h2>
       <!-- form_for部分 -->
       <%= form_for(book) do |f| %>
         <% if book.errors.any? %>
         <div id="error_explanation">
      <h2><%= book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
       <% end %>

      <h4>Title</h4>
        <%= f.text_field :title %>

      <h4>Opinion</h4>
        <%= f.text_area :body %>

       <br>

       <%= f.submit 'Create Book', :class=>"btn btn-primary btn-block"%>
      <% end %>