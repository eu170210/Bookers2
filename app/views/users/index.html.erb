<div class="container">
  <div class="row">

    <div class="col-lg-4">
     <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-lg-8">

    	<h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
          <th>Image</th>
          <th>Name</th>
          <th colspan="3"></th>
          </tr>
        </thead>

    	<tbody>
         <% @users.each do |user| %>
          <tr>


          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(@user) %></td>

          </tr>
         <% end %>
        </tbody>

       </table>