<p>User#show</p>

<div class="container">
  <div class="row">

    <div class="col-lg-4">

     <h2>User Info</h2>
       <%= @user.name %>
       <%= @user.introduction %>
        <p><%= link_to "編集", books_path %></p>

      <h2>New Book</h2>
       <!-- form_for部分 -->
       <%= form_for(@book) do |f| %>
         <% if @book.errors.any? %>
         <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
       <% end %>

      <h4>Title</h4>
        <%= f.text_field :title %>

      <h4>Opinion</h4>
        <%= f.text_area :body %>

       <br>

       <%= f.submit 'Create Book' %>

       <% end %>
    </div>

    <div class="col-lg-8">
    <h2>Books</h2>

    <table class="table table-striped">
        <thead>
          <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
          <tr>

          <td><%= book.title %></td>
          <td><%= book.body %></td>

          </tr>
         <% end %>
        </tbody>
      </table>



    </div>
  </div>
</div>