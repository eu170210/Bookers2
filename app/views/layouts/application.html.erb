<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="wrapper">
    <header>
      <nav class= "navbar navbar-expand-md navbar-dark bg-dark">
      <span class="navbar-brand mb-0 h1" href="#">Bookers</span>
      <div class="justify-content-end">
      <ul class="navbar-nav justify-content-end">
     <% if user_signed_in? %>
      <li class="">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", books_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to "Users", users_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to "Books", books_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>

    <% else %>
      <li class="">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", root_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "About", new_booker_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "login", new_user_session_path %>
      </li>
    <% end %>
  </ul>
</div>
</nav>
</header>
    <%= yield %>
  </div>
  <footer>
     <p>CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>
